{
  "name": "sentra-rag",
  "version": "1.0.0",
  "description": "基于Node.js的轻量级RAG系统 - 支持文本和图片的向量知识库",
  "main": "src/index.js",
  "type": "module",
  "exports": {
    ".": "./src/sdk/SentraRAG.js",
    "./sdk": "./src/sdk/SentraRAG.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "setup": "node scripts/setup.js",
    "test": "node test/api.js",
    "test:watch": "nodemon test/api.js",
    "test:sdk": "node test/sdk-demo.js",
    "test:image:process": "node test/image-processing.js",
    "test:image:search": "node test/image-search.js",
    "test:all": "node test/sdk-demo.js && node test/image-processing.js && node test/image-search.js",
    "test:emotion": "node test/emotion-check.js",
    "test:emotion:img": "node test/emotion-check.js ./1.jpeg",
    "clean": "rm -rf logs/* storage/* node_modules/.cache"
  },
  "keywords": [
    "rag",
    "knowledge-graph",
    "vector-database",
    "openai",
    "neo4j",
    "multimodal"
  ],
  "author": "Sentra Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "image-size": "^1.0.2",
    "jimp": "^1.6.0",
    "joi": "^17.11.0",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "natural": "^6.12.0",
    "neo4j-driver": "^5.15.0",
    "node-cache": "^5.1.2",
    "openai": "^4.20.1",
    "segment": "^0.1.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
