# 保存根目录（默认：artifacts）
BILI_BASE_DIR=artifacts

# 清晰度 qn（默认：80=1080P）
# 可选：127(8K) 120(4K) 116(1080P60) 112(1080P+) 80(1080P) 64(720P) 32(480P) 16(360P)
BILI_QUALITY=80

# 最大下载大小（单位MB），超过则不下载，仅返回链接（默认 65）
BILI_MAX_DOWNLOAD_MB=65

# 是否保存封面（默认 true，设置为 false 关闭）
BILI_SAVE_COVER=true

# 分步超时控制（按网络情况调整，单位毫秒）
BILI_FETCH_TIMEOUT_MS=20000        # 搜索/详情/直链请求超时，默认 20秒
BILI_PROBE_TIMEOUT_MS=8000         # 大小探测超时，默认 8秒
BILI_DOWNLOAD_TIMEOUT_MS=120000    # 下载超时，默认 120秒

# 未知大小时是否直接返回链接（默认 true，避免超时）
BILI_STRICT_PROBE=true

# User-Agent（如遇 412/403，可以自定义通过风控）
BILI_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 Chrome/124 Safari/537.36

# 可选：登录 Cookie（提高稳定性/清晰度；本地使用，勿提交仓库）
# BILI_COOKIE=SESSDATA=xxxxxx; bili_jct=xxxxxx; DedeUserID=xxxxxx;

# 是否默认发送自定义音乐卡片（默认 false，仅下载）
# 设置为 true 后，必须提供 user_id 或 group_id
BILI_SEND_AS_MUSIC_CARD=true

# WebSocket SDK 地址（用于发送消息）
WS_SDK_URL=ws://127.0.0.1:6702

# WebSocket 超时时间（毫秒）
WS_SDK_TIMEOUT_MS=15000

# 发送方式（pair 或 object）
WS_SDK_ARG_STYLE=pair

# 自定义发送路径（默认使用下面的私聊/群聊路径）
WS_SDK_SEND_PATH=

# 私聊发送路径
WS_SDK_SEND_PATH_PRIVATE=send.private

# 群聊发送路径
WS_SDK_SEND_PATH_GROUP=send.group